{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "noEmit": false,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
